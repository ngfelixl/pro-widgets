{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@pro-widgets": ["libs/pro-widgets/src/index.ts"],
      "@docs": ["apps/docs/src"],
      "@docs/*": ["apps/docs/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
